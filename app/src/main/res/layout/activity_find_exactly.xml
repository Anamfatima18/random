<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".FeaturedItems">


    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/welcomeLayout"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
       >

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="  Find Exactly What You Need ! "
            android:textColor="#575252"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:id="@+id/SearchLayout"
        android:background="@drawable/round_background"
        android:layout_below="@id/welcomeLayout">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingTop="4dp"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="5dp"
            android:src="@drawable/search" />
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:hint="Search"
            android:inputType="text"
            android:background="@null"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />

    </LinearLayout>


  <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/RecentSearches"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/SearchLayout"
         android:orientation="vertical"
        >

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Recent Searches "
            android:textColor="#000000"
            android:textSize="20sp"
             />

      <LinearLayout
          android:layout_width="wrap_content"
          android:id="@+id/ResearchItem1"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_below="@id/RecentSearches"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal"
          >

          <TextView
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="15dp"
              android:text=" Item Number One "
              android:textColor="#000000"
              android:textSize="20sp"
              android:textStyle="bold"
              />
          <ImageView
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:paddingTop="4dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="5dp"
              android:src="@drawable/upright" />

      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:id="@+id/ResearchItem2"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_below="@id/ResearchItem1"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal"
          >

          <TextView
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="15dp"
              android:text=" Item Number Two "
              android:textColor="#000000"
              android:textSize="20sp"
              android:textStyle="bold"
              />
          <ImageView
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:paddingTop="4dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="5dp"
              android:src="@drawable/upright" />

      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:id="@+id/ResearchItem3"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_below="@id/ResearchItem2"

          android:layout_marginBottom="10dp"
          android:orientation="horizontal"
          >

          <TextView
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="15dp"
              android:text=" Item Number Three "
              android:textColor="#000000"
              android:textSize="20sp"
              android:textStyle="bold"
              />
          <ImageView
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:paddingTop="4dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="5dp"
              android:src="@drawable/upright" />

      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/PopularSearches"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/RecentSearches"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Popular Searches "
            android:textColor="#000000"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/PopularItem1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/PopularSearches"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:text=" Item Number One "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/upright" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/PopularItem2"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/PopularItem1"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:text=" Item Number Two "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/upright" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/PopularItem3"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/PopularItem2"

            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:text=" Item Number Three "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/upright" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="16dp"
    android:paddingBottom="35dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="#FDFDFD"
    android:weightSum="5">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginRight="30dp"
        android:onClick="onHomeIconClick">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/home" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="20sp"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:clickable="true"
        android:onClick="onHomeIconClick">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/search" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="20sp"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:onClick="onHomeIconClick">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:onClick="onHomeIconClick">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/chat" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textSize="20sp"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginLeft="20dp"
        android:onClick="onHomeIconClick">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/user" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20sp"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>

</RelativeLayout>
