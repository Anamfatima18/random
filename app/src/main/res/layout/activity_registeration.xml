<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_marginLeft="15dp"
    android:background="#ffffff"
    android:layout_marginRight="15dp"
    tools:context=".Registeration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/spotimage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Registration"
            android:textSize="30dp"
            android:textStyle="bold"
            style="@style/CardView.Dark"
            android:layout_weight="1"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3.2"
        android:weightSum="12"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="20dp"
            style="@style/CardView.Dark"
            android:gravity="bottom"
            android:layout_marginTop="0dp"></TextView>

        <EditText
            android:id="@+id/eTName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:paddingLeft="15dp"

            android:background="@drawable/circular_background"
            android:hint="Enter name"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Email"
            android:textSize="20dp"
            android:textColor="#000000"
            style="@style/CardView.Dark"
            android:gravity="bottom"
            android:layout_marginTop="0dp"></TextView>

        <EditText
            android:id="@+id/eTEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textEmailAddress"
            android:layout_weight="1.25"
            android:paddingLeft="15dp"
            android:background="@drawable/circular_background"
            android:hint="Enter Email"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Contact Number"
            android:textSize="20dp"
            android:textColor="#000000"
            style="@style/CardView.Dark"
            android:gravity="bottom"
            android:layout_marginTop="0dp"></TextView>

        <EditText
            android:id="@+id/eTContactNumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textPhonetic"
            android:paddingLeft="15dp"
            android:layout_weight="1.25"
            android:background="@drawable/circular_background"
            android:hint="Enter contact number"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Country"
            android:textColor="#000000"
            android:textSize="20dp"
            style="@style/CardView.Dark"
            android:gravity="bottom"
            android:layout_marginTop="0dp"></TextView>
        <LinearLayout
            android:id="@+id/Country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seprator"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/circular_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:text="Pakistan"
                android:textColor="#615E5E"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/down" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="City"

            android:textColor="#000000"
            android:textSize="20dp"
            style="@style/CardView.Dark"
            android:gravity="bottom"
            android:layout_marginTop="10dp"></TextView>
        <LinearLayout
            android:id="@+id/City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seprator"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/circular_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:text="Rawalpindi"
                android:textColor="#615E5E"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/down" />
        </LinearLayout>






        <Button
            android:id="@+id/RegisterationButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Sign Up"
            android:gravity="center"

            android:textSize="20dp"
            android:background="@drawable/circular_background"
             android:textColor="#ffffff"
            android:backgroundTint="#FF9800"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></TextView>

        <TextView
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold"></TextView>


    </LinearLayout>

</LinearLayout>